<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.application.training.board.dao.BoardDAO">
	
	<insert id="createBoard" parameterType="BoardDTO">
		INSERT INTO BOARD (
			PASSWD,
			WRITER,
			SUBJECT,
			CONTENT
		)
		VALUES(
			#{passwd},
			#{writer},
			#{subject},
			#{content}
		)
	</insert>
	
	<!-- 게시글을 전체 조회하여 DAO로 전달(Return)한다. -->
	<select id="getBoardList" resultType="BoardDTO">
		SELECT *
		FROM BOARD
	</select>
	
	<!-- DAO에서 전달받은 boardId로 1개의 Board테이블을 Update한다. -->
	<update id="updateReadCnt" parameterType="long">
		UPDATE BOARD
		SET    READ_CNT = READ_CNT + 1
		WHERE  BOARD_ID = #{boardId}
	</update>
	
	<!-- 1개의 게시글을 조회하여 DAO로 전달(return)한다. -->
	<select id="getBoardDetail" parameterType="long" resultType="BoardDTO">
		SELECT *
		FROM   BOARD
		WHERE  BOARD_ID = #{boardId}
	</select>
</mapper>
